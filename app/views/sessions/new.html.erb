<header class="page-header">
  <h1>Welcome Back &raquo; Login</h1>
</header>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_tag '/sessions' do %>

      <div class="form-group">
        <%= label_tag 'Email' %>
      </div>
        <%= text_field_tag :email %>
      <div class="form-group">
        <%= label_tag 'Password' %>
      </div>
        <%= password_field_tag :password %>
      <div class="form-group">
        <%= submit_tag "Submit" %>
      </div>
    <% end %>
  </div>
</div>